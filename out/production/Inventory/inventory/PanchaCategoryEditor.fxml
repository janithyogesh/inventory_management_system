<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventory.PanchaCategoryEditorController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <!-- Category Section -->
    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="10">
            <ListView fx:id="categoryListView" prefHeight="200" prefWidth="200" styleClass="table-view" stylesheets="@dashboardDesign.css" />
            <TextField fx:id="categoryTextField" promptText="Enter new category" styleClass="search" stylesheets="@dashboardDesign.css" />
            <Button onAction="#handleAddCategory" styleClass="add-btn" stylesheets="@dashboardDesign.css" text="Add Category" />
            <Button onAction="#handleRemoveCategory" styleClass="delete-btn" stylesheets="@dashboardDesign.css" text="Remove Selected Category" />
        </VBox>
    </HBox>
    <!-- Apply Changes Button -->
    <Button onAction="#handleApplyChanges" styleClass="update-btn" stylesheets="@dashboardDesign.css" text="Apply Changes" />
</VBox>
