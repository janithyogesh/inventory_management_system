<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventory.ChainCategoryEditorController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox alignment="CENTER" spacing="20">
        <!-- Category Section -->
        <VBox alignment="CENTER" spacing="10">
            <ListView fx:id="categoryListView" prefHeight="200" prefWidth="200" styleClass="table-view" stylesheets="@dashboardDesign.css" />
            <TextField fx:id="categoryTextField" promptText="Enter new category" styleClass="search" stylesheets="@dashboardDesign.css" />
            <Button onAction="#handleAddCategory" styleClass="add-btn" stylesheets="@dashboardDesign.css" text="Add Category" />
            <Button onAction="#handleRemoveCategory" styleClass="delete-btn" stylesheets="@dashboardDesign.css" text="Remove Selected Category" />
        </VBox>
        <!-- Weight Section -->
        <VBox alignment="CENTER" spacing="10">
            <ListView fx:id="weightListView" prefHeight="200" prefWidth="200" styleClass="table-view" stylesheets="@dashboardDesign.css" />
            <TextField fx:id="weightTextField" promptText="Enter new weight" styleClass="search" stylesheets="@dashboardDesign.css" />
            <Button onAction="#handleAddWeight" styleClass="add-btn" stylesheets="@dashboardDesign.css" text="Add Weight" />
            <Button onAction="#handleRemoveWeight" styleClass="delete-btn" stylesheets="@dashboardDesign.css" text="Remove Selected Weight" />
        </VBox>
        <!-- Length Section -->
        <VBox alignment="CENTER" spacing="10">
            <ListView fx:id="lengthListView" prefHeight="200" prefWidth="200" styleClass="table-view" stylesheets="@dashboardDesign.css" />
            <TextField fx:id="lengthTextField" promptText="Enter new length" styleClass="search" stylesheets="@dashboardDesign.css" />
            <Button onAction="#handleAddLength" styleClass="add-btn" stylesheets="@dashboardDesign.css" text="Add Length" />
            <Button onAction="#handleRemoveLength" styleClass="delete-btn" stylesheets="@dashboardDesign.css" text="Remove Selected Length" />
        </VBox>
    </HBox>
    <Line endX="100.0" startX="-526.4097900390625" startY="-1.421247124671936" />
    <!-- Apply Changes Button -->
    <Button onAction="#handleApplyChanges" styleClass="update-btn" stylesheets="@dashboardDesign.css" text="Apply Changes" />
</VBox>
