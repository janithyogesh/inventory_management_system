    <parameter name="inventoryP" class="java.lang.Integer"/>
    <query>
        <![CDATA[
        SELECT s.customer_id, s.product_id, s.category, s.weight, s.net_weight, s.length, s.karat, s.gold_rate, s.price, s.return_value, s.date,
               sr.total, sr.exchange, sr.payable, sr.amount, sr.balance, sr.date AS receipt_date, sr.time
